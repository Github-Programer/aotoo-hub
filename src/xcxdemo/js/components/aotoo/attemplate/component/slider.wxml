<wxs src="../utils.wxs" module="utils" />
<template name="slider">
  <slider 
    min="{{item['min']||0}}"
    max="{{item['max']||100}}"
    step="{{item['step']||1}}"
    disabled="{{item['disabled']||false}}"
    value="{{item['value']||0}}"
    color="{{item['color']||'#e9e9e9'}}"
    selected-color="{{item['selected-color']||'#1aad19'}}"
    activeColor="{{item['activeColor']||'#1aad19'}}"
    backgroundColor="{{item['backgroundColor']||'#e9e9e9'}}"
    block-size="{{item['block-size']||28}}"
    block-color="{{item['block-color']||'#ffffff'}}"
    show-value="{{item['show-value']||false}}"
    bindchange="{{item['bindchange']}}"
    bindchanging="{{item['bindchanging']}}"
  />
</template>