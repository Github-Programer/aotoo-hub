@import "./common/css/index"

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.boxer
  background: $color-bg
  color: $color-default
  font-size: $size-primary
  height: 100vh
  width: 100%
  overflow: hidden
  &.boxer-hei-auto
    height: auto
  &.boxer-hei-auto
    height: auto

.demowrap-x
  padding: 24rpx
  width: calc(100% - 48rpx)   //48= 24*2