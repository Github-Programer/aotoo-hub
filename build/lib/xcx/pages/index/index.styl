  .btn-primary.btn-small
    width: 326rpx;
    line-height: 56rpx;
    font-size: 28rpx;
  .item
    padding 10rpx
  .card-notification
    width: auto
    height: auto
    .htitles
      border:1px solid transparent;
      border-radius:30rpx;
      border-color:#ccaf90;
      background-color:#fff;
      display flex
      flex-direction: column
      min-height 130rpx
      height auto
      width 100%
      overflow hidden
      .btn-small
        margin-left 10px
      .t-item
        padding:15rpx;
        &:first-child
          font-size 25rpx
          height 20%
        &:last-child
          padding-left 20rpx
          padding-top 0
