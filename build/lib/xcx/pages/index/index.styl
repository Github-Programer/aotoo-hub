@import "../../common/commonfunc"

.closeIt
  z-index: 99;

.index-swiper-modal
  background: #fff
  border-radius: $modal-radius
  width: 80vw
  height: auto
  color: #fff
  margin-bottom: 60rpx
  overflow: hidden
  &.item-hei
    height: 66vh
  .swiper-item
    border-radius: $modal-radius
    overflow: hidden
  .item-wrapper
    // ss-display-flex(column, center, center, center)
    text-align: center
    border-radius: $modal-radius
    overflow: hidden
    height: 100%
  .item-header
    padding: 3.5vh 0 5vh;
  .item-body
    display: inline-flex
    margin-bottom: 3vh;

.item-wrapper-1
  background: url('https://7373-ss-1-4vn7o-1259184764.tcb.qcloud.la/01.png?sign=eb92b9860254b95ae5ab67e7542fc767&t=1570523779') no-repeat #fff
  background-position: top center
  background-size: contain;
.item-wrapper-2
  background: url('https://7373-ss-1-4vn7o-1259184764.tcb.qcloud.la/02.png?sign=50622463fe1556925d50c92508a47736&t=1570523821') no-repeat #fff
  background-position: top center
  background-size: contain;
  

.wx-swiper-dots
  bottom: 4vh!important

.index-header
  background: url('https://7373-ss-1-4vn7o-1259184764.tcb.qcloud.la/bj.png?sign=1ae35843964d688e2ac34ac1bf538a25&t=1570523659') no-repeat #f4f4f4
  background-position: top center
  background-size: contain;



.index-btn
  ss-btnFunc( $btn-radius, $bgc: #2567FF, $bc: #2567FF, $color: #fff, $hover-bg: #2567FF, $border-radius-small: $btn-radius-s)
  border: none
  box-shadow: $box-shadow-btn
  background: linear-gradient(90deg,rgba(87,142,254,1),rgba(37,103,255,1))
  width: 172rpx
  line-height: 60rpx
  font-weight: bold
  &:active
    background: #2567FF
    border-color: #2567FF
    color: #fff

.ss-tree-list
  padding: 40rpx 25rpx

