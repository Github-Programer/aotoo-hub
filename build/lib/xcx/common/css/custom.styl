.as-common
  background-color #FAFAFA
  width 98vw
  height 100%
  // min-height 98vh
  padding 1vw
  // padding 10rpx
  &.moveit
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  &.bar
    &.moveit
      box-shadow: 0 5px 10px rgba(0,0,0,0.1);

.actionMask
  position absolute
  top: 0;
  left: 0
  display none
  width 100vw
  height 100vh
  background-color fade-out(#000,  0.5)
  &.show
    display block

.actionSide
  @extends .as-common
  position absolute
  right -100vw
  top 0
  transition: all 0.2s ease
  &.bar
    width 60vw
  &.moveit
    transform: translate3d(-100vw, 0, 0);

.actionSide-left
  @extends .as-common
  position absolute
  left -100vw
  top 0
  transition: all 0.2s ease
  &.bar
    width 60vw
  &.moveit
    transform: translate3d(100vw, 0, 0);

.actionSide-bot
  @extends .as-common
  position absolute
  left 0
  bottom -100vh
  transition: all 0.2s ease
  &.bar
    height 60vh
    &.moveit
      transform: translate3d(0, -60vh, 0);
  &.moveit
    transform: translate3d(0, -100vh, 0);

.actionSide-top
  @extends .as-common
  position absolute
  left 0
  top -100vh
  transition: all 0.2s ease
  &.moveit
    transform: translate3d(0, 100vh, 0);
  &.bar
    top -40vh
    min-height 40vh
    height 40vh
    &.moveit
      transform: translate3d(0, 40vh, 0);

.closeIt
  position absolute
  font-size 48rpx
  top 10rpx
  right: 10rpx
  color: #C1CDCD